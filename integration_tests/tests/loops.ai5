#include <testing.ai5>

Func TestWhile()
	i = 0
	while i < 100
		i += 1
	wend
	AssertEqual(i,100)
EndFunc

Func TestDo()
	i = 0
	do
		i += 1
	until i = 20
	AssertEqual(i,20)
EndFunc

Func TestForIn()
	l = [1,2,3,4]
	sum = 0
	for e in l
		sum += e
	next
	assertEqual(sum,10)
EndFunc

Func TestForTo()
	sum = 0
	for i=0 to 4 step 1
		sum += i
	next
	assertEqual(sum,10)
EndFunc

RunTests({
	"while": TestWhile,
	"do": TestDo,
	"for .. in": TestForIn,
	"for .. to": TestForTo
	})